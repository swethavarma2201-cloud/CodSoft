import java.util.Random;
import java.util.Scanner;

public class NumberGuessingGame {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        boolean playAgain = true;
        int totalScore = 0;
        int rounds = 0;

        while (playAgain) {
            int numberToGuess = random.nextInt(100) + 1;
            int attemptsAllowed = 6;
            int attemptsTaken = 0;
            boolean guessedCorrectly = false;

            System.out.println("Welcome to the Number Guessing Game!");
            System.out.println("I'm thinking of a number between 1 and 100.");
            System.out.println("You have " + attemptsAllowed + " attempts to guess it.");

            while (attemptsTaken < attemptsAllowed && !guessedCorrectly) {
                System.out.print("Enter your guess: ");
                int userGuess = scanner.nextInt();
                attemptsTaken++;

                if (userGuess == numberToGuess) {
                    System.out.println("Congratulations! You guessed the number in " + attemptsTaken + " attempts.");
                    totalScore += attemptsAllowed - attemptsTaken + 1;
                    guessedCorrectly = true;
                } else if (userGuess < numberToGuess) {
                    System.out.println("Your guess is too low. You have " + (attemptsAllowed - attemptsTaken) + " attempts left.");
                } else {
                    System.out.println("Your guess is too high. You have " + (attemptsAllowed - attemptsTaken) + " attempts left.");
                }
            }

            if (!guessedCorrectly) {
                System.out.println("Sorry, you didn't guess the number. The number was " + numberToGuess + ".");
            }

            rounds++;
            System.out.print("Do you want to play again? (yes/no): ");
            String response = scanner.next().toLowerCase();
            playAgain = response.equals("yes");
        }

        System.out.println("Thanks for playing! Your final score is " + totalScore + " points after " + rounds + " rounds.");
        scanner.close();
    }
}
